    <script src="https://code.jquery.com/jquery-3.6.1.min.js"
                integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ="
                crossorigin="anonymous"></script>
    <script>
            
        $(function () {
            $(".card-text-edit").click(function () {
                $(".card-text-input").removeAttr("disabled");
            });

            $(".card-text-save").click(function () {
                $.ajax({
                    type: "POST",
                    url: "/Profile/UpdateCardText",
                    dataType: "json",
                    data: { data: $(".card-text-input").val() },
                    success: function (response) {
                        $(".card-text-input").attr("disabled", "disabled");
                        //$("#result").empty().append(response);
                    }
                });
            });

            $("#profilepicture").on('click', function () {
                $("input[id='filephoto']").click();
                $("#uploadphoto").show();
            });

            $("#uploadphoto").click(function () {
                $("#uploadphoto").hide();
            });
        });
    </script>